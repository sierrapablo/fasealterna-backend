datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Concert {
  id       String   @id @map("_id") @default(auto()) @db.ObjectId
  date     DateTime
  venue    String
  link     String
  visible  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("concerts")
}
